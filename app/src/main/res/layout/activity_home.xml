<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bin.soundcloud.home">



    <RelativeLayout
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/firsticon"
            />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/allerta"
                android:text="Find music you love."
                android:textColor="#f5f5f5"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/allerta"
                android:text="Disconver new artics."
                android:textColor="#f5f5f5"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/bCreate"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@id/text2"
                android:background="@drawable/custom"
                android:fontFamily="@font/allerta"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Create an account"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/bSignIn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@id/text2"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/bCreate"
                android:background="@drawable/custom2"
                android:fontFamily="@font/allerta"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Sign in"
                android:textColor="#000" />

        </RelativeLayout>



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
