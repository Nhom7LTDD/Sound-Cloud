<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/boder_textview"

            >

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/imageslide4"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/img"
                android:text="Biin"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/belowname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name"
                android:layout_marginTop="100dp"

                android:text="View public profile">

            </TextView>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lnl_2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/rl1"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/boder_textview"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:id="@+id/tv_notification"
                android:text="Notifications"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/borderbottom_textview"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:text="Record"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnl_3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/lnl_2"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/boder_textview"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:text="Basic setting"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/borderbottom_textview"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:text="Notification settings"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnl_4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/lnl_3"
            android:layout_marginTop="15dp"
            android:background="@drawable/boder_textview"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:text="Install SoundCloud Pulse app"
                android:textColor="@color/black"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="for creator"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnl_5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/lnl_4"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/boder_textview"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:text="Help"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/borderbottom_textview"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:text="Lega"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnl_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lnl_5"
            android:layout_marginTop="15dp"
            android:background="@drawable/boder_textview"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:text="Logout"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@id/lnl_6"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="App version 2018.04.06-release"
                android:textSize="13dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Flipper version 1.3.6"
                android:textSize="13dp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
